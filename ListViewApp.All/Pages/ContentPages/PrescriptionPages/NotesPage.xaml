<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewApp.All.Pages.ContentPages.PrescriptionPages.NotesPage"
             xmlns:l="clr-namespace:ListViewApp.All.Resx"
             Title = "{l:Resource NotesPage_Notes}"
             Icon = "notes.png">
    <ScrollView>
        <StackLayout>
            <Frame Margin="10" HasShadow="True" Padding="5">
                <StackLayout>
                    <Label Text="{l:Resource NotesPage_PharmacistNote}" Style="{StaticResource headerStyle}" />
                    <Label LineBreakMode="WordWrap" Text="{Binding PharmacistNote}" Style="{StaticResource valueStyle}"/>
                </StackLayout>              
            </Frame>
            <Frame Margin="10" HasShadow="True" Padding="5">
                <StackLayout>
                    <Label Text="{l:Resource NotesPage_PatientNote}" Style="{StaticResource headerStyle}" />
                    <Label LineBreakMode="WordWrap" Text="{Binding PatientNote}" Style="{StaticResource valueStyle}"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>