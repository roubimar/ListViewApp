<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ListViewApp.All.Views.ListItemDetailView" 
             BackgroundColor="#CFFF" >
    <StackLayout Spacing="0" Padding="5" VerticalOptions="Fill" HorizontalOptions="Fill">
        <Label FontSize="16" TextColor="Black" Text="{Binding ID}"/>
        <Label FontSize="12" TextColor="Gray" Text="{Binding Items}"/>
        <Label FontSize="10" TextColor="Gray" Text="{Binding Exposed, StringFormat='Vystaveno: {0:dd/MM/yyyy}'}" VerticalOptions="End"/>
    </StackLayout>    
</ContentView>
